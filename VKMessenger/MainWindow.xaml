<Window x:Class="VKMessenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VK Messenger" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Секция авторизации -->
        <GroupBox Grid.Row="0" Header="1. Авторизация">
            <StackPanel>
                <Label Content="Токен доступа:"/>
                <PasswordBox x:Name="TokenBox" PasswordChar="*" Height="25" Margin="0,5"/>
                <TextBlock Text="(полученный access_token для VK API)" FontStyle="Italic" Foreground="Gray"/>
            </StackPanel>
        </GroupBox>

        <!-- Секция получателя -->
        <GroupBox Grid.Row="1" Header="2. Получатель">
            <StackPanel>
                <Label Content="ID получателя:"/>
                <TextBox x:Name="RecipientBox" Height="25" Margin="0,5"/>
                <TextBlock Text="(числовой ID пользователя или сообщества)" FontStyle="Italic" Foreground="Gray"/>
            </StackPanel>
        </GroupBox>

        <!-- Кнопки управления историей -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Загрузить историю" Width="120" Height="30" Margin="0,0,10,0" Click="LoadHistory_Click"/>
            <Button Content="Обновить" Width="80" Height="30" Margin="0,0,10,0" Click="RefreshHistory_Click"/>
            <Button Content="Очистить" Width="80" Height="30" Click="ClearHistory_Click"/>
        </StackPanel>

        <!-- История сообщений (с обратным порядком) -->
        <GroupBox Grid.Row="3" Header="3. История сообщений (новые сверху)">
            <ListBox x:Name="MessagesList" Height="200">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock>
                                <Run Text="{Binding Sender}" FontWeight="Bold"/>
                                <Run Text=" (" Foreground="Gray"/>
                                <Run Text="{Binding Date}" Foreground="Gray"/>
                                <Run Text=")" Foreground="Gray"/>
                            </TextBlock>
                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap" Margin="5,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <!-- Новое сообщение -->
        <GroupBox Grid.Row="4" Header="4. Новое сообщение">
            <TextBox x:Name="MessageInputBox" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"
                     Height="80"
                     KeyDown="MessageInputBox_KeyDown"/>
        </GroupBox>

        <!-- Вложения -->
        <GroupBox Grid.Row="5" Header="5. Вложения">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ListBox x:Name="AttachmentsList" Height="80" 
                         ScrollViewer.HorizontalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="{Binding FileName}" VerticalAlignment="Center"/>
                                <Button Content="X" Width="20" Height="20" Margin="5,0,0,0"
                                        Click="RemoveAttachment_Click" Tag="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Grid.Column="1" 
                        Content="Добавить файл" 
                        Width="100" 
                        Margin="5,0,0,0" 
                        Click="AddAttachment_Click"/>
            </Grid>
        </GroupBox>

        <!-- Отправка -->
        <Button Grid.Row="6" 
                Content="ОТПРАВИТЬ СООБЩЕНИЕ" 
                Background="#4A76A8" 
                Foreground="White" 
                FontWeight="Bold"
                Height="40" 
                Margin="0,10"
                Click="SendButton_Click"/>
    </Grid>
</Window>